<!-- <%$smarty.template%> --><%if $adminUser %><%include file="admin/admin_header.tpl" title="Stockton Outfitters"%><%else%><%include file="header.tpl" title="Stockton Outfitters"%><%/if%><div id="content"><%if $adminUser %><h1 class="top">Admin Reservation Edit - Current Availability <%$currentYear%></h1><%else%><h1 class="top">Reservations - Current Availability <%$currentYear%></h1><%/if%><%if $error %><p class="error"><%$error|nl2br%></p><%/if%><%if $adminUser %><form name="reservations" action="admin.php" method="post"><input type="hidden" name="mode" value="bookings"><input type="hidden" name="custID" value="<%$custID%>"><input type="hidden" name="resID" value="<%$resID%>"><%else%><form name="reservations" action="index.php" method="post"><input type="hidden" name="mode" value="reserve"><%/if%><input type="hidden" name="action" value="reserve"><p class="ctr">If you have any difficulties using our online reservation system, or would prefer to speak with someone at our headquarters please contact us via email at <a href="mailTo:info@StocktonOutfitters.com?subject=Reservation">info@StocktonOutfitters.com</a> or by phone at (406) 782-9532.</h2><table class="userForm">	<tr>		<td>Number of hunters in your group:</td>		<td><select class="normText" name="hunters"><option value="">...</option><option value="1" <%if $hunters eq "1"%>selected<%/if%>>1</option><option value="2" <%if $hunters eq "2"%>selected<%/if%>>2</option><option value="3" <%if $hunters eq "3"%>selected<%/if%>>3</option><option value="4" <%if $hunters eq "4"%>selected<%/if%>>4</option><option value="5" <%if $hunters eq "5"%>selected<%/if%>>5</option><option value="6" <%if $hunters eq "6"%>selected<%/if%>>6</option></select></td>	</tr>		<tr>		<td>Number of <em>Non-Hinting</em> Observers:</td>		<td><select class="normText" name="observers"><option value="">...</option><option value="0" <%if $observers eq "0"%>selected<%/if%>>0</option><option value="1" <%if $observers eq "1"%>selected<%/if%>>1</option><option value="2" <%if $observers eq "2"%>selected<%/if%>>2</option><option value="3" <%if $observers eq "3"%>selected<%/if%>>3</option><option value="4" <%if $observers eq "4"%>selected<%/if%>>4</option><option value="5" <%if $observers eq "5"%>selected<%/if%>>5</option><option value="6" <%if $observers eq "6"%>selected<%/if%>>6</option><option value="7" <%if $observers eq "7"%>selected<%/if%>>7</option></select></td>	</tr></table><p class="ctr">For groups larger than 5 please contact us directly at <a href="mailTo:info@StocktonOutfitters.com?subject=Reservation">info@StocktonOutfitters.com</a></p><p class="ctr">For each Non-Hunting Observer there will be a charge of $<%$observerPrice|money_format:2:".":","%></h2><h2><%if $edit eq "true"%>You may edit your trip selection here.<%else%>Please select from the available trips below:<%/if%></h2><!-- start trip loop --><%section name=tripList loop=$tripLoop%><!-- if it is not the first time through close the table and do a submit button --><%if $tripLoop[tripList].type && $smarty.section.tripList.index != 0%></table><div class="lr"><span><%if $edit eq "true"%><input type="submit" name="save1" value="Save Changes" class="button"><%else%><input type="submit" name="step1" value="Continue" class="button"></span><%/if%></div><%/if%><!-- if it's a new type of trip show the tripType details --> <%if $tripLoop[tripList].type%><h1 class="sub"><%$tripLoop[tripList].type%></h1><p class="teaser" align="center"><%$tripLoop[tripList].description%></p><table class="price"> 		<tr>		<td><input type="radio" class="radio" name="price" value="<%$tripLoop[tripList].typeID%>_price1" <%if $price eq $tripLoop[tripList].typeID|cat:"_price1" %>checked<%/if%>></td>		<td><%$tripLoop[tripList].price1_desc%></td>		<th>$<%$tripLoop[tripList].price1|money_format:2:".":","%> per client</th>		<td><input type="radio" class="radio" name="price" value="<%$tripLoop[tripList].typeID%>_price2" <%if $price eq $tripLoop[tripList].typeID|cat:"_price2" %>checked<%/if%>></td>		<td><%$tripLoop[tripList].price2_desc%></td>		<th>$<%$tripLoop[tripList].price2|money_format:2:".":","%> per client</th>	</tr>		<tr>		<td colspan="6"><hr></td>	</tr></table><!-- end the triytype details if --><table class="week"> <%/if%>	<tr>		<td><%if $tripLoop[tripList].spots != 'UNAVAILABLE'%><input type="radio"  name="trip" value="<%$tripLoop[tripList].typeID|cat:'_'|cat:$tripLoop[tripList].tripID%>" <%if $trip eq $tripLoop[tripList].typeID|cat:"_"|cat:$tripLoop[tripList].tripID%>checked<%/if%>><%/if%></td>		<td><%$tripLoop[tripList].start_date|date_format:"%B %e"%> - <%$tripLoop[tripList].end_date|date_format:"%B %e"%> &bull; <em><%$tripLoop[tripList].spots%></em></td>	</tr><%/section%><!-- close the table ad do a submit button for the last time through because the loop will not work --></table><div class="lr"><span><%if $edit eq "true"%><input type="submit" name="save1" value="Save Changes" class="button"><%else%><input type="submit" name="step1" value="Continue" class="button"></span><%/if%></div></form><!-- end trip loop --></div><%include file="footer.tpl"%>