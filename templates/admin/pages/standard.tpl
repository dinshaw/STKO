<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl"%><div id="content"><h1><%$page|capitalize%></h1><p class="error"><%$error|nl2br%></p><form action="admin.php" method="post"><input type="hidden" name="mode" value="page"><input type="hidden" name="page" value="<%$page%>"><input type="hidden" name="action" value="edit"><p>Title</p><input name="title" value="<%$title%>" size="80"><p>Teaser</p><textarea name="teaser" rows="10" cols="80"><%$teaser%></textarea><p>Body</p><textarea name="body" rows="10" cols="80"><%$body%></textarea><input type="submit" name="submit" value="Update"></form><h1>Trip Details &amp; Information</h1><table id="details">	<tr>		<td><span>Location:</span> <%$location%></td>		<td><span>Season:</span> <%$season%></td>	</tr>	<tr>		<td><span>Trip Duration:</span> <%$duration%></td>		<td><span>Availability:</span> <%$availability%></td>	</tr>	<tr>		<td><span>Departs from:</span> <%$departs%></td>		<td><span>Camp:</span> <%$camp%></td>	</tr>	<tr>		<td><span>Accommodations:</span> <%$accommodations%></td>		<%if $species%>		<td><span>Species:</span> <%$species%></td>		<%/if%>	</tr>	<%if $peaksPasses%>	<tr>		<td colspan="2"><span>Peaks & Passes:</span></td>	</tr>		<tr>		<td colspan="2"><p><%$peaksPasses|nl2br%></p></td>	</tr>	<%/if%></table><div><a href="admin.php?mode=details&page=<%$page%>" class="white">EDIT THE DETAILS &amp; INFO FOR PAGE: <%$title%></a>.</div><h1>Top Images</h1><div><a href="admin.php?mode=gallery&page=<%$page%>" class="white">EDIT THE IMAGES FOR : <%$title%></a>.</div><%section name=imageList loop=$imageLoop%><div class="pic"><span class="title"><%$imageLoop[imageList].title%></span><img src="userimages/pages/<%$page%>/<%$imageLoop[imageList].image%>" <%if $imageLoop[imageList].w > "100"%> width="100"<%elseif $imageLoop[imageList].h > "200"%>height="100"<%/if%> ><span class="caption"><%$imageLoop[imageList].caption%></span></div><%/section%> </div><%include file="admin/admin_footer.tpl"%>