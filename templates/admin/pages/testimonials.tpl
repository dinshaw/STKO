<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl"%><div id="content"><h1 class="top">Add and edit testimonials here</h1><!-- previews area --><%if $edit %><fieldset><legend>Preview your testimonial here:</legend><h1><%$page%></h1><h2 class="lr"><%$author%><span><%$trip%> - <%$date%></span></h2><p><%$body|nl2br%></p></fieldset><%/if%><!-- end preview area --><p class="error"><%$msg|nl2br%></p><form action="admin.php" method="post" enctype="multipart/form-data" name="press"><input type="hidden" name="MAX_FILE_SIZE" value="10000000"><input type="hidden" name="mode" value="testimonials"><!-- set the picID for editing --><%if $edit %><input type="hidden" name="edit"><input type="hidden" name="editID" value="<%$editID%>" /><%/if%><div class="team"><p>Author</p><input type="text" name="author" class="title" value="<%$author%>"><p>Trip</p><input type="text" name="trip" class="title" value="<%$trip%>"><p>Date</p><input type="text" name="date" class="title" value="<%$date%>"><p>body</p><textarea name="body" class="body"><%$body%></textarea><p>Page</p><select name="pageID"><option value="">Select one...</option><% section name=pageList loop=$pageLoop %><option value="<% $pageLoop[pageList].id %>" <%if $pageID eq $pageLoop[pageList].id %>selected<% /if %> ><% $pageLoop[pageList].page %></option><% /section %></select><!-- begin cms content adds --><table id="cms">	<tr>		<th>Add a  <span class="white">link</span>:</th>		<td>Text:</td>		<td><input type="text" name="text" class="smaller"></td>		<td>Link to:</td>		<td><input type="text" name="link" class="smaller"></td>		<td><a href="#" onClick="addLink('press','body');return false;">ADD</a></td>	</tr>		<tr>		<th>Add a  <span class="white">email link</span>:</th>		<td>Text:</td>		<td><input type="text" name="emailText" class="smaller"></td>		<td>Link to:</td>		<td><input type="text" name="emailLink" class="smaller"></td>		<td><a href="#" onClick="addEmailLink('press','body');return false;">ADD</a></td>	</tr>		<tr>		<th>Add <span class="white"><strong>BOLD</strong></span> text</th>		<td>Text:</td>		<td><input type="text" name="bold" class="smaller"></td>		<td><a href="#" onClick="addBold('press','body');return false;">ADD</a></td>	</tr>		<tr>		<th>Add <span class="white"><em>Italic</em></span> text</th>		<td>Text:</td>		<td><input type="text" name="italic" class="smaller"></td>		<td><a href="#" onClick="addItalic('press','body');return false;">ADD</a></td>	</tr>		<tr>		<td>Add <span class="white"><em><strong>BOLD Italic</strong></em></span> text</td>		<td>Text:</td>		<td><input type="text" name="boldItalic" class="smaller"></td>		<td><a href="#" onClick="addBoldItalic(0,6);return false;">ADD</a></td>	</tr>	</table><!-- begin cms content adds --><!-- if in add mode, fabricate what would be the next display value with if $totalCount + 1<h4>Display: <input type="text" name="display" value="<%if !$display%><%$totalCount+1%><%else%><%$display%><%/if%>" class="num"> / <%if !$display%><%$totalCount+1%><%else%><%$totalCount%><%/if%></h4></div> --><%if $edit %><div class="lr"><input type="submit" name="update" value="UPDATE"><span><input type="submit" name="confirm" value="CONFIRM"></span></div><%else%><input type="submit" name="add" value="Add"><%/if%></form><h1>Testimonials</h1><%section name=testimonialList loop=$testimonialLoop%><%if $testimonialLoop[testimonialList].page %><h1><%$testimonialLoop[testimonialList].page%></h1><%/if%><form action="admin.php" method="post"><input type="hidden" name="mode" value="testimonials"><input type="hidden" name="id" value="<%$testimonialLoop[testimonialList].id%>"><h2 class="lr"><%$testimonialLoop[testimonialList].author%><span><%$testimonialLoop[testimonialList].trip%> - <%$testimonialLoop[testimonialList].date%></span></h2><p><%$testimonialLoop[testimonialList].body|nl2br%></p><div class="lr"><input type="submit" name="edit" value="Edit"><span><input type="submit" name="delete" value="Delete" onClick="return confirm('Are you sure you want to delete this testimonial?')"></span></div></form><%/section%></div><%include file="admin/admin_footer.tpl"%>