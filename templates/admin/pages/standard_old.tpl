<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl"%><div id="content"><h1><%$page|capitalize%></h1><p class="error"><%$error|nl2br%></p><form action="admin.php" method="post" enctype="multipart/form-data" name="shit"><input type="hidden" name="MAX_FILE_SIZE" value="10490000"><input type="hidden" name="mode" value="pages"><input type="hidden" name="page" value="<%$page%>"><input type="hidden" name="action" value="edit"><p>Title</p><input name="title" value="<%$title%>" size="80"><p>Teaser</p><textarea name="teaser" rows="10" cols="80"><%$teaser%></textarea><p>Body</p><textarea name="body" rows="10" cols="80"><%$body%></textarea><h1>Trip Details &amp; Information</h1><table id="details">	<tr>		<td><span>Location:</span> <%$location%></td>		<td><span>Season:</span> <%$season%></td>	</tr>	<tr>		<td><span>Trip Duration:</span> <%$duration%></td>		<td><span>Availability:</span> <%$availability%></td>	</tr>	<tr>		<td><span>Departs from:</span> <%$departs%></td>		<td><span>Camp:</span> <%$camp%></td>	</tr>	<tr>		<td><span>Accommodations:</span> <%$accommodations%></td>		<%if $species%>		<td><span>Species:</span> <%$species%></td>		<%/if%>	</tr>	<%if $peaksPasses%>	<tr>		<td colspan="2"><span>Peaks & Passes:</span></td>	</tr>		<tr>		<td colspan="2"><p><%$peaksPasses|nl2br%></p></td>	</tr>	<%/if%></table><div><a href="admin.php?mode=details&page=<%$page%>" class="white">EDIT THE DETAILS &amp; INFO FOR PAGE: <%$title%></a>.</div><h1>Top Images</h1><table align="center" class="form"> <tr>   <th colspan="5">Images</th> </tr>  <tr><%section name=imageList loop=$imageLoop%>  <td><img src="userimages/pages/<%$page%>/<%$imageLoop[imageList].image%>" <%if $imageLoop[imageList].w > "100"%> width="100"<%elseif $imageLoop[imageList].h > "200"%>height="100"<%/if%> ></td><%/section%>  </tr>  <tr><%section name=imageList loop=$imageLoop%>  <td class="white"><%$imageLoop[imageList].title%></td><%/section%>  </tr>   <tr><%section name=imageList loop=$imageLoop%>  <td class="white"><%$imageLoop[imageList].caption%></td><%/section%>  </tr>  <tr> <%section name=imageList loop=$imageLoop%>  <td class="small"><p class="small">Change display order:</p>Current: <strong><%$imageLoop[imageList].display%></strong><p class="small">New:<input type="text" name="display[<%$imageLoop[imageList].id%>]" value=""></p></td><%/section%>  </tr>   <tr> <%section name=imageList loop=$imageLoop%>  <td><input type="checkbox" name="delete[]" value="<%$imageLoop[imageList].id%>" onClick="alert('Are you sure you want to delete <%$imageLoop[imageList].image%>?');">Delete</td><%/section%>  </tr>    <tr>  	<th colspan="5">New Image</th> </tr> <tr>  <td colspan="5" ><input type="file" name="image"></td> </tr>  <tr>  <td colspan="5" >Title:</td>  </tr>   <tr>  <td colspan="5" ><input type="text" name="imgTitle" value="<%$imgTitle%>"></td>  </tr> </tr>  <tr>  <td colspan="5" >Caption:</td>  </tr>  <tr>  <td colspan="5" ><textarea name="caption" rows="5" cols="20"><%$caption%></textarea></td> </tr>    <tr>  	<td  colspan="5" ><input type="submit" name="submit" value="Update" ></td>  </tr>  	</table></form></div><%include file="admin/admin_footer.tpl"%>