<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl"%><!-- previews area --><div id="sidebar"><h2>Preview your entry here:</h2><%section name=sidebarList loop=$sidebarLoop%><form action="admin.php" method="post"><input type="hidden" name="mode" value="sidebar"><input type="hidden" name="action" value="edit"><input type="hidden" name="id" value="<%$sidebarLoop[sidebarList].id%>"><!-- <input type="hidden" name="picID" value="<%$sidebarLoop[sidebarList].picID%>"> --><p class="noIndent"><%if $sidebarLoop[sidebarList].title %><strong><%$sidebarLoop[sidebarList].title%></strong><br /><%/if%><%$sidebarLoop[sidebarList].body%><br /><strong><%if  $sidebarLoop[sidebarList].status eq "1"%>ON<%else%>OFF<%/if%></strong></p><input type="submit" name="edit" value="Edit"><input type="submit" name="delete" value="Delete" onClick="return confirm('Are you sure you want to delete this entry?')"></form><hr><%/section%></div><div id="content"><h1 class="top">Add and edit entries for the SIDEBAR here</h1><!-- end preview area --><p class="error"><%$msg|nl2br%></p><form action="admin.php" method="post" name="sidebar"><input type="hidden" name="mode" value="sidebar"><%if $edit %><input type="hidden" name="editID" value="<%$editID%>"><%/if%><div id="team"><h4>Title (optional):</h4><input type="text" name="title" class="titleShort" id="title" value="<%$title%>">  <h4>Text:</h4><span><textarea name="body" class="bodyShort" id="body"><%$body%></textarea></span></div><!-- begin cms content adds --><table id="cms">	<tr>		<th>Add a  <span class="white">link</span>:</th>		<td>Text:</td>		<td><input type="text" name="text" class="smaller"></td>		<td>Link to:</td>		<td><input type="text" name="link" class="smaller"></td>		<td><a href="#" onClick="addLink('sidebar','body');return false;">ADD</a></td>	</tr>		<tr>		<th>Add a  <span class="white">email link</span>:</th>		<td>Text:</td>		<td><input type="text" name="emailText" class="smaller"></td>		<td>Link to:</td>		<td><input type="text" name="emailLink" class="smaller"></td>		<td><a href="#" onClick="addEmailLink(0,7);return false;">ADD</a></td>	</tr>		<tr>		<th>Add <span class="white"><strong>BOLD</strong></span> text</th>		<td>Text:</td>		<td><input type="text" name="bold" class="smaller"></td>		<td><a href="#" onClick="addBold(0,7);return false;">ADD</a></td>	</tr>		<tr>		<th>Add <span class="white"><em>Italic</em></span> text</th>		<td>Text:</td>		<td><input type="text" name="italic" class="smaller"></td>		<td><a href="#" onClick="addItalic(0,7);return false;">ADD</a></td>	</tr>		<tr>		<td>Add <span class="white"><em><strong>BOLD Italic</strong></em></span> text</td>		<td>Text:</td>		<td><input type="text" name="boldItalic" class="smaller"></td>		<td><a href="#" onClick="addBoldItalic(0,7);return false;">ADD</a></td>	</tr></table><!-- begin cms content adds --><!-- if in add mode, fabricate what would be the next display value with if $totalCount + 1 --><h4>Display: <input type="text" name="display" value="<%if !$display%><%$totalCount+1%><%else%><%$display%><%/if%>" class="num"> / <%if !$display%><%$totalCount+1%><%else%><%$totalCount%><%/if%></h4><select name="status"><option value="1" <%if $status eq "1"%>selected="true"<%/if%>>ON</option><option value="0" <%if $status eq "0"%>selected="true"<%/if%>>OFF</option></select><%if $edit %><div class="lr" style="width:50%;"><input type="submit" name="update" value="UPDATE"><span><input type="submit" name="confirm" value="CONFIRM"></span></div><%else%><input type="submit" name="add" value="Add"><%/if%></form></div><%include file="admin/admin_footer.tpl"%>