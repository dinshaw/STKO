<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl"%><div id="content"><h1 class="top">Add F.A.Q.'s Here:</h1><p class="error"><%$msg|nl2br%></p><%if $edit %><fieldset><legend>Preview your entry here</legend><h2><%$faqCatTitle%></h2><p class="teaser"><%$q|nl2br%></p><p><%$a|nl2br%></p></fieldset><%/if%><form action="admin.php" method="post"><input type="hidden" name="mode" value="faq"><input type="hidden" name="action" value="add"><%if $edit %><input type="hidden" name="editID" value="<%$editID%>"><%/if%><p>Categorie</p><p><select name="faqCatId"><option value="">Select one...</option><%section name=faqCatList loop=$faqCatLoop%><option value="<%$faqCatLoop[faqCatList].id%>" <%if $faqCatId eq $faqCatLoop[faqCatList].id %>selected=selected<%/if%>><%$faqCatLoop[faqCatList].catTitle%></option><%/section%></select></p><p>Question</p><p><input type="text" name="q" class="title" value="<%$q%>"></p><p>Answer</p><p><textarea name="a" class="body"><%$a%></textarea></p><%if $edit %><div class="lr"><input type="submit" name="update" value="UPDATE"><span><input type="submit" name="confirm" value="CONFIRM"></span></div><%else%><input type="submit" name="add" value="Add"><%/if%>	</form><h2>F.A.Q. Categories</h2><p class="error"><%$error%></p><table id="form"><form action="admin.php" method="post"><input type="hidden" name="mode" value="faq"><input type="hidden" name="action" value="addCat">	<tr>		<td>Title:</td>		<td><input type="text" name="catTitle" value="<%$catTitle%>"></td>		<td colspan="2"><input type="submit" name="submit" value="Add"></td>	</tr></form></table><hr><table id="form"><tr>		<th>Title</th>			<th>Name</th>		<th>Action</th>	</tr><%section name=faqCatList loop=$faqCatLoop%><form action="admin.php" method="post"><input type="hidden" name="mode" value="faq"><input type="hidden" name="action" value="deleteCat"><input type="hidden" name="id" value="<%$faqCatLoop[faqCatList].id%>">	<tr>		<td><%$faqCatLoop[faqCatList].catTitle%></td>		<td><input type="submit" name="deleteCat" value="Delete"></td>	</tr></form><%/section%></table><h1>F.A.Q.</h1><%section name=faqList loop=$faqLoop%><form action="admin.php" method="post"><input type="hidden" name="mode" value="faq"><input type="hidden" name="id" value="<%$faqLoop[faqList].id%>"><%if $faqLoop[faqList].newCat %><h2><%$faqLoop[faqList].newCat%></h2><%/if%><p class="teaser"><%$faqLoop[faqList].q|nl2br%></p><p><%$faqLoop[faqList].a|nl2br%></p><div class="lr"><input type="submit" name="edit" value="Edit"><span><input type="submit" name="delete" value="Delete" onClick="return confirm('Are you sure you want to delete this FAQ?')"></span></div></form><%/section%></div><%include file="admin/admin_footer.tpl"%>