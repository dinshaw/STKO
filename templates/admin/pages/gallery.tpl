<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl" title="Admin Area - Stockton Outfitters"%><div id="content"><h1 class="top">Add & Edit images here</h1><div id="imageFilter"><form method="post" action="admin.php" name="img_cats"><input type="hidden" name="mode" value="gallery"><table>	<tr>		<td>Show photos for:</td>		<td><select name="filter"  onChange="this.form.submit()">		<option value="">All</option>		 <% section name=pageList loop=$pageLoop %> 		<option value="<%$pageLoop[pageList].page%>" <%if $filter eq $pageLoop[pageList].page %>selected<%/if%> > <% $pageLoop[pageList].title%></option>		<% /section %>		<option value="M"  <%if $filter eq "M" %>selected<%/if%>>Misc</option>		</select></td>	</tr></table></form></div><p class="error"><%$msg|nl2br%></p><!-- show a preview pane if edit mode--><%if $edit %><div id="imagePreview"><fieldset><legend>Preview Your Image Here</legend><span class="title"><%$title%></span><img src="userimages/pages/<%$page%>/<%$imgName%>" width="200"><span class="caption"><%$caption%></span></fieldset></div><%/if%><form action="admin.php" method="post" enctype="multipart/form-data" name="add_image"><input type="hidden" name="MAX_FILE_SIZE" value="10490000"><input type="hidden" name="mode" value="gallery"><input type="hidden" name="currPage" value="<%$page%>"><%if $edit %><input type="hidden" name="editID" value="<%$editID%>"><input type="hidden" name="picID" value="<%$picID%>"><%/if%><p><input type="file" name="image"></p><p>Category: <select onChange="enableDisable('sub_page','add_image')" name="page">		<option value="">Select One...</option>		 <% section name=pageList loop=$pageLoop %> 		<option value="<%$pageLoop[pageList].page%>" <%if $page eq $pageLoop[pageList].page %>selected<%/if%> > <% $pageLoop[pageList].title%></option>		<% /section %>		<option value="M" <%if $page eq "M" %>selected<%/if%>>Misc</option>		</select></p><p>Sub Page: <select name="sub_page" id="sub_page" disabled>		<option value="">Select One...</option>		 <% section name=pageList loop=$pageLoop %> 		<option value="<%$pageLoop[pageList].page%>" <%if $sub_page eq $pageLoop[pageList].page %>selected<%/if%> > <% $pageLoop[pageList].title%></option>		<% /section %>		</select></p><p>Title:</p><p><input type="text" name="title" value="<%$title%>"></p>  <p>Caption:</p>  <p><textarea name="caption" rows="2" cols="20"><%$caption%></textarea></p><!-- <%if $edit %> <h4>Display: <input type="text" name="display" value="<%if !$display%><%$totalCount+1%><%else%><%$display%><%/if%>" class="num"> / <%$sectionCount%></h4><%/if%>--> <%if $edit %><div class="lr"><input type="submit" name="update" value="UPDATE"><span><input type="submit" name="confirm" value="CONFIRM"></span></div><%else%><input type="submit" name="add" value="Add"><%/if%> </form>   <hr> <%section name=imageList loop=$imageLoop%><%if $imageLoop[imageList].newPage && $smarty.section.imageList.index != "0"%></div><%/if%><%if $imageLoop[imageList].newPage %><h1 class="pic"><%$imageLoop[imageList].newPage%></h1><div><%/if%><%if $imageLoop[imageList].newSubPage%><h2 class="pic"><%$imageLoop[imageList].newSubPage%></h2><%/if%><div class="pic"><form method="post" action="admin.php" name="img_details"><input type="hidden" name="mode" value="gallery"><input type="hidden" name="id" value="<%$imageLoop[imageList].id%>"><input type="hidden" name="page" value="<%$imageLoop[imageList].page%>"><span class="title"><%$imageLoop[imageList].title|truncate:15:"...":true%></span><div class="picContainer"><a href="index.php?mode=popup&page=<%$imageLoop[imageList].page%>&id=<%$imageLoop[imageList].id%>" onClick="window.open('index.php?mode=popup&page=<%$imageLoop[imageList].page%>&id=<%$imageLoop[imageList].id%>','Hunting&nbsp;Trophys&nbsp;-&nbsp;Stocktion&nbsp;Outfitters','width=<%if $imageLoop[imageList].w >= 600%><%math equation="x + 50" x=$imageLoop[imageList].w%><%else%>600<%/if%>,height=<%math equation="x + 250" x=$imageLoop[imageList].h%>,scrollbars=yes,resizable=yes'); return false;"><img src="userimages/pages/<%$imageLoop[imageList].page%>/<%$imageLoop[imageList].image%>" width="150"></a></div><!-- <span class="mt10 small">Display: <%$imageLoop[imageList].display%> / <%$imageLoop[imageList].totalCount%></span> --><span><input type="submit" name="edit" value="Edit"><input type="submit" name="delete" value="Delete" onClick="return confirm('Are you sure you want to delete <%$imageLoop[imageList].image%>?')"></span></form></div><%/section%> </div><%include file="admin/admin_footer.tpl"%>