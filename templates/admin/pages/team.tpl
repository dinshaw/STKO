<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl"%><div id="content"><h1 class="top">Add and edit team members here</h1><!-- previews area --><%if $edit %><fieldset><legend>Preview your entry here:</legend><div class="team"><h2><%$title%></h2><%if $imgName %><img src="userimages/team/<%$imgName%>" width="150"><%/if%><span><%$body|nl2br%></span></div></fieldset><%/if%><!-- end preview area --><p class="error"><%$msg|nl2br%></p><form action="admin.php" method="post" enctype="multipart/form-data" name="team"><input type="hidden" name="MAX_FILE_SIZE" value="10000000"><input type="hidden" name="mode" value="team"><!-- set the picID for editing --><%if $edit %><input type="hidden" name="picID" value="<%$picID%>"><input type="hidden" name="editID" value="<%$editID%>"><%/if%><div class="team"><h4><%if edit %><%if $imgName %>Change<%else%>Add<%/if%> <%/if%>Image:</h4><input type="file" name="image"><%if $edit && $imgName %><h4>Remove Image:<input type="checkbox" name="removeImage" value="true" onChange="alert('Remove image from this entry?');"></h4><%/if%><h4>Name / Info:</h4><h2><input type="text" name="title" class="title" value="<%$title%>"></h2><h4>Text:</h4><span><textarea name="body" class="body" id="body"><%$body%></textarea></span><!-- begin cms content adds --><table id="cms">	<tr>		<th>Add a  <span class="white">link</span>:</th>		<td>Text:</td>		<td><input type="text" name="text" class="smaller"></td>		<td>Link to:</td>		<td><input type="text" name="link" class="smaller"></td>		<td><a href="#" onClick="addLink('team','body');return false;">ADD</a></td>	</tr>		<tr>		<th>Add a  <span class="white">email link</span>:</th>		<td>Text:</td>		<td><input type="text" name="emailText" class="smaller"></td>		<td>Link to:</td>		<td><input type="text" name="emailLink" class="smaller"></td>		<td><a href="#" onClick="addEmailLink('team','body');return false;">ADD</a></td>	</tr>		<tr>		<th>Add <span class="white"><strong>BOLD</strong></span> text</th>		<td>Text:</td>		<td><input type="text" name="bold" class="smaller"></td>		<td><a href="#" onClick="addBold('team','body');return false;">ADD</a></td>	</tr>		<tr>		<th>Add <span class="white"><em>Italic</em></span> text</th>		<td>Text:</td>		<td><input type="text" name="italic" class="smaller"></td>		<td><a href="#" onClick="addItalic('team','body');return false;">ADD</a></td>	</tr>		<tr>		<td>Add <span class="white"><em><strong>BOLD Italic</strong></em></span> text</td>		<td>Text:</td>		<td><input type="text" name="boldItalic" class="smaller"></td>		<td><a href="#" onClick="addBoldItalic(0,6);return false;">ADD</a></td>	</tr>	</table><!-- begin cms content adds --><!-- if in add mode, fabricate what would be the next display value with if $totalCount + 1 --><h4>Display: <input type="text" name="display" value="<%if !$display%><%$totalCount+1%><%else%><%$display%><%/if%>" class="num"> / <%if !$display%><%$totalCount+1%><%else%><%$totalCount%><%/if%></h4></div><%if $edit %><div class="lr"><input type="submit" name="update" value="UPDATE"><span><input type="submit" name="confirm" value="CONFIRM"></span></div><%else%><input type="submit" name="add" value="Add"><%/if%></form><h1>Meet The Team</h1><%section name=teamList loop=$teamLoop%><form action="admin.php" method="post"><input type="hidden" name="mode" value="team"><input type="hidden" name="action" value="edit"><input type="hidden" name="id" value="<%$teamLoop[teamList].id%>"><input type="hidden" name="picID" value="<%$teamLoop[teamList].picID%>"><div class="team"><h2 class="lr"><%$teamLoop[teamList].name%><span>Display: <%$teamLoop[teamList].display%> / <%$totalCount%></span></h2><%if $teamLoop[teamList].image %><img src="userimages/team/<%$teamLoop[teamList].image%>" width="150"><%/if%><span><%$teamLoop[teamList].text|nl2br%></span></div><div class="lr"><input type="submit" name="edit" value="Edit"><span><input type="submit" name="delete" value="Delete" onClick="return confirm('Are you sure you want to delete <%$teamLoop[teamList].name%>?')"></span></div></form><hr><%/section%></div><%include file="admin/admin_footer.tpl"%>