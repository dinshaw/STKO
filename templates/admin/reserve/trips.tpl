<!-- <%$smarty.template%> --><%include file="admin/admin_header.tpl"%><div id="content"><h1 class="top">Add & Edit Trip Types here<%$title%></h1><p class="error"><%$msg|nl2br%></p><%if $editID %><fieldset>	<legend>Trip date display</legend>	<table class="week"> 	<tr>		<td><input type="radio" disabled></td>		<td><%$start_date|date_format%> - <%$end_date|date_format%> &bull; <em>Room for <%$spots%></em></td>	</tr></table></fieldset><%/if%><form action="admin.php" method="post" name="tripForm"  onsubmit="return submitForm();"><input type="hidden" name="mode" value="trips"><input type="hidden" name="errorCheck" value="on"><%if $editID %><input type="hidden" name="editID" value="<%$editID%>"><%/if%><table id="details">	<tr>		<td>For use on reservation page:</td>	</tr>	<tr>		<td><span>Trip Type:</span>		<select name="type_id">		<option value="">Select One...</option> 		<%section name=tripTypeList loop=$tripTypeLoop%><option value="<%$tripTypeLoop[tripTypeList].id%>" <%if $type_id eq $tripTypeLoop[tripTypeList].id %>selected<%/if%> ><%$tripTypeLoop[tripTypeList].type%></option>			<%/section%>		</select></td>	</tr>		<tr>		<td><span>Year:</span><input type="text" name="year" value="<%$year%>" class="dollar"> (xxxx)</td>	</tr>		<tr>		<td><span>Start date:</span><select name="startMonth"><%include file="reserve/monthSelect.tpl" value=$startMonth%></select>		<select name="startDay"><%include file="reserve/daySelect.tpl" value=$startDay%></select></td>	</tr>			<tr>		<td><span>End date:</span><select name="endMonth"><%include file="reserve/monthSelect.tpl" value=$endMonth%></select>		<select name="endDay"><%include file="reserve/daySelect.tpl" value=$endDay%></select></td>	</tr>	<tr>		<td><span>Availability: </span><input type="text" name="spots" value="<%$spots%>" class="num"></td>	</tr>		<tr>		<td><span>Status: </span><input type="radio" name="status" value="1" <%if $status eq '1'%>checked<%/if%>>On <input type="radio" name="status" value="0" <%if !$status || $status eq '0' %>checked<%/if%>>Off</td>	</tr></table><%if $editID %><div class="lr"><input type="submit" name="update" value="UPDATE"><span><input type="submit" name="confirm" value="CONFIRM"></span></div><%else%><input type="submit" name="add" value="Add"><%/if%><!-- start the trip type loop for editing --><table id="trips"><%section name=tripList loop=$tripLoop%><%if $tripLoop[tripList].type %><tr>	<td colspan="2" class="tripTitle"><%$tripLoop[tripList].type%></td></tr><%/if%><form action="admin.php" method="post"><input type="hidden" name="mode" value="trips"><input type="hidden" name="id" value="<%$tripLoop[tripList].id%>"><tr>	<td colspan="2"><%$tripLoop[tripList].startDate|date_format%> - <%$tripLoop[tripList].endDate|date_format%></td></tr><tr>	<td><input type="submit" name="edit" value="Edit"></td>	<td><input type="submit" name="delete" value="Delete" onClick="return confirm('Are you sure you want to delete <%$tripLoop[tripList].type%>?')"></td></tr></form><%/section%></table></div><%include file="admin/admin_footer.tpl"%>