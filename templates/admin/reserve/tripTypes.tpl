f there are multiple rich text editors inside the form//alert("Submitted value: "+document.tripForm.description.value) //alert submitted valuereturn true; //Set to false to disable form submission, for easy debugging.}//Usage: initRTE(imagesPath, includesPath, cssFile)initRTE("templates/rte/images/", "templates/rte/", "inc/css/");//--></script><table id="details">	<tr>		<td>For use on reservation page:</td>	</tr>	<tr>		<td><span>Trip Type:</span> <input type="text" name="tripType" value="<%$tripType%>"></td>	</tr>		<tr>		<td colspan="2" valign="top"><span>Description:</span><br><!-- teaser textarea --><script language="JavaScript" type="text/javascript"><!--//Usage: writeRichText(fieldname, html, width, height, buttons, readOnly)writeRichText('description','<%$description%>', 400, 200, true, false);//--></script></td>	</tr>	<tr>		<td><span>Price 1:</span> $<input type="text" name="price1" value="<%$price1%>" class="dollar"></td>		<td><span>Price 1 description:</span> <input type="text" name="price1_desc" value="<%$price1_desc%>"></td>	</tr>		<tr>		<td><span>Price 2:</span> $<input type="text" name="price2" value="<%$price2%>" class="dollar"></td>		<td><span>Price 2 description:</span>  <input type="text" name="price2_desc" value="<%$price2_desc%>"></td>	</tr>	<tr>		<td colspan="2"><hr></td>	</tr>		<tr>		<td>For display on trip pages:</td>	</tr>	<tr>		<td><span>Location:</span> <input type="text" name="location" value="<%$location%>"></td>		<td><span>Display on page:</span><select name="page_id[]" size="3" multiple>		 <% section name=pageList loop=$pageLoop %> 		<option value="<%$pageLoop[pageList].id%>" <%if $page_id%><%if in_array($pageLoop[pageList].id, $page_id) %>selected<%/if%><%/if%> > <% $pageLoop[pageList].title%></option>		<% /section %>		</select></td>	</tr>		<tr>		<td><span>Season Start:</span><select name="seasonStartMonth"><%include file="reserve/monthSelect.tpl" value=$seasonStartMonth%></select>		